{
  "name": "fanta-aiuto",
  "version": "2.0.0",
  "description": "Tracker Fantacalcio Mantra - Advanced Fantasy Football Manager",
  "private": true,
  "keywords": [
    "fantasy-football",
    "fantacalcio",
    "tracker",
    "sports",
    "management"
  ],
  "license": "MIT",
  "author": "Francesco",
  "type": "module",
  "main": "electron-main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc -b && vite build",
    "build-electron": "npm run build && electron .",
    "electron": "NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:8084 && NODE_ENV=development electron .\"",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-linux": "npm run build && electron-builder --linux",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vitest": "^1.0.4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.francesco.fantaaiuto",
    "productName": "FantaAiuto",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "electron-preload.cjs",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publisherName": "Francesco",
      "fileAssociations": [
        {
          "ext": "xlsx",
          "name": "Excel File",
          "description": "File Excel per FantaAiuto"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.sports"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FantaAiuto"
    },
    "dmg": {
      "title": "FantaAiuto ${version}",
      "icon": "assets/icon.icns"
    }
  }
}
